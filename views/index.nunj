{% extends "master.nunj" %}

{% block content %}

    <h1>{{ name }}</h1>

    <a href="/auth/twitch">login</a>

    {% if isAuth %}
        <div class="card bg-primary"  style="width: 200px;">
            <img class="card-img" src="{{ user.avatar }}">

            <div class="card-body">
                {{ user.username }}
            </div>
        </div>
    {% endif %}

{% endblock %}