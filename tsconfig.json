{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "lib": [
      "DOM",
      "ES2019"
    ],
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "typedocOptions": {
    "inputFiles": ["src"],
    "mode": "modules",
    "out": "docs",
    "exclude": ["**/*+(.spec|.e2e).ts", "src/migrations"],
    "disableOutputCheck": true
  }
}
