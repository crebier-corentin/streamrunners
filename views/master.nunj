<!doctype html>
<html lang="fr">

<head>

    <!-- META -->

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <meta property="og:type" content="website" />
    
    {% block meta %}
    {% endblock %}

    <meta property="og:url" content="{{ HOSTNAME }}" />
    <meta property="og:site_name" content="StreamRunners" />

    <meta name="twitter:card" content="" />
    <meta name="twitter-title" content="StreamRunners - Gagne des Cadeaux" />
    <meta name="twitter-creator" content="@StreamRunners" />
    <meta name="twitter-image:src" content="" />

    <meta name="owner" content="Kévin Comte" />
    <meta name="copyright" content="StreamRunners" />

    <!-- FIN META -->


    <title>{{ title | default("Titre") }}</title>
    <link rel="icon" href="/img/favicon.ico" />
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://kit.fontawesome.com/9e4cbfb17e.js" crossorigin="anonymous"></script>
    <script data-ad-client="ca-pub-7690571679670706"
            async
            src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    {% block css %}

    {% endblock %}

    {# Cookie consent #}
    <script>
        window.addEventListener('load', function() {
            window.cookieconsent.initialise({
                'palette': {
                    'popup': {
                        'background': '#8c6dc5',
                        'text': '#ffffff',
                    },
                    'button': {
                        'background': '#ffffff',
                        'text': '#8c6dc5',
                    },
                },
                'theme': 'classic',
                'position': 'bottom-right',
                'content': {
                    'message': 'Ce site utilise des cookies pour améliorer votre expérience de navigation.',
                    'dismiss': 'OK !',
                    'link': 'En savoir plus',
                },
            });
        });
    </script>

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-114414235-2"></script>
    <script>
        window.dataLayer = window.dataLayer || [];

        function gtag() {
            dataLayer.push(arguments);
        }

        gtag('js', new Date());

        gtag('config', 'UA-114414235-2');
    </script>
</head>

<body class="bg-purple stars">
    <img src="/img/meteores.gif" class="meteore" />
{# Navbar #}
<div class="">
    <div class="custom-navbar">
        <div class="brand-logo">
            <a href="https://streamrunners.fr"><img alt="Logo StreamRunners" title="Logo StreamRunners" src="/img/navbrand.png" width="160px"></a>
        </div>
        <div class="navbar-links">
            <ul>
                <li><a href="/"><i class="fas fa-home"></i> Accueil</a></li>
                <li><a href="/leaderboard"><i class="fas fa-trophy"></i> Classement</a></li>

                {% if req.isAuthenticated() %}

                    <li><a href="/coupon"><i class="fas fa-ticket-alt"></i> Coupon</a></li>
                    <li><a href="/raffle"><i class="fas fa-boxes"></i> GiveAway</a></li>

                    {% if req.user.moderator %}

                        <li><a href="/admin" class="btn-request"><i class="fas fa-lock"></i> Admin</a></li>

                    {% endif %}
                {% endif %}

                {% if req.isAuthenticated() %}
                    <li class="nav-item dropdown">
                        <img src="{{ req.user.avatar }}" alt="avatar" class="loggedImage">
                        <a class="nav-link d-inline-block dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#">
                            <div class="loggedPseudo">{{ req.user.displayName }}</div>
                            <div>
                                <span id="points-counter" class="text-small text-white">{{ req.user.points }}</span>
                                <img src="/img/po.png" alt="points" width="16px" height="16px" />
                            </div>

                           {# <div>
                                <span class="text-small text-white">{{ req.user.meteores }}</span>
                                <img src="/img/mt.png" alt="points" width="16px" height="16px" />
                            </div> #}

                        </a>
                         <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                             <a href="/inventory"><i class="fas fa-suitcase"></i> Inventaire</a>
                             <div class="dropdown-divider"></div>
                             <a href="/subscription"><i class="fas fa-shopping-cart"></i> Abonnements</a>
                             <div class="dropdown-divider"></div>
                             <a href="/morepoints"><i class="fas fa-plus"></i> Plus de points</a>
                             <div class="dropdown-divider"></div>
                             <a href="/option"><i class="fas fa-cogs"></i> Paramètres</a>
                             <div class="dropdown-divider"></div>
                             <a class="nav-link" href="/auth/logout"><i class="fas fa-sign-out-alt"></i> Se déconnecter</a>
                        </div>
                    </li>
                {% endif %}

            </ul>
        </div>
    </div>
    <div class="glowing_stars">
        <div class="star"></div>
        <div class="star"></div>
        <div class="star"></div>
        <div class="star"></div>
        <div class="star"></div>


    </div>
    {# Announcement #}
    {% if req.isAuthenticated() %}
        {% if announcement != undefined %}
            <div class="container">
                <a href="{{ announcement.url }}" target="_blank">
                    <div style="margin-top: 2rem;" class="alert alert-primary" role="alert">
                        {{ announcement.text }}
                    </div>
                </a>
            </div>
        {% endif %}
        <div class="container">
            <div style="background-color: transparent!important;" class="alert alert-primary" role="alert"></div>
            </a>
        </div>
    {% endif %}

    {% block content %}
        This is the default content
    {% endblock %}

    <footer class="footer">
        <div class="container">
            <hr>

            <h3 class="text-center">Ils nous font confiance :</h3><br>

            {% for partner in partners %}
                <a class="partlink" href="{{ partner.url }}" target="_blank"><img alt="Logo Partenaire" title="Logo Partenaire" class="partimg"
                                                                                  width="10%"
                                                                                  src="{{ partner.image }}" /></a>
            {% endfor %}

            <hr>
            <p>© 2020 StreamRunners</p>
            <a class="inlinelink" href="/cgu">CGU</a> - <a class="inlinelink" href="/rules">Règlement</a> -
            <a class="inlinelink" href="/contact">Contact</a>
            <br>
            <a class="inline"
               href="https://www.facebook.com/StreamRunners/"
               aria-label="Facebook StreamRunners"
               target="_blank"><i style="color:blue" class="fab fa-facebook margright"></i></a>
            <a class="inline"
               href="https://twitter.com/StreamRunners"
               aria-label="Twitter StreamRunners"
               target="_blank"><i style="color:deepskyblue" class="fab fa-twitter-square margright"></i></a>
            <!-- <a class="inline"
               href="www.instagram.com/twitchrunners/"
               aria-label="Instagram StreamRunners"
               target="_blank"><i style="color:pink" class="fab fa-instagram margright"></i></a> -->
            <a class="inline" href="https://discord.gg/rA8Hbec" aria-label="Discord StreamRunners" target="_blank"><i
                        style="color:lightgrey"
                        class="fab fa-discord margright"></i></a>
        </div>
</div>
</footer>

</body>

<script src="/js/bundle.js"></script>
<script src="/js/bootstrap.bundle.min.js"></script>

{% if req.isAuthenticated() %}
    <script src="/js/points-counter.js"></script>
{% endif %}


{% block script %}

{% endblock %}


</html>
