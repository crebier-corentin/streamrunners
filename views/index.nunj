{% extends "master.nunj" %}

{% block content %}

    <h1>{{ name }}</h1>

    <a class="btn btn-primary" href="/auth/twitch">Se connecter avec Twitch.Tv <i class="fab fa-twitch"></i></a>

    {% if req.isAuthenticated() %}
        <div class="card bg-primary"  style="width: 200px;">
            <img class="card-img" src="{{ req.user.avatar }}">

            <div class="card-body">
                {{ req.user.username }}
            </div>
        </div>
    {% endif %}

{% endblock %}