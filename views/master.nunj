<!doctype html>
<html lang="fr">

<head>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/img/brand.png" />
    <meta property="og:title" content="Gagne des viewers ou des cadeaux ?!" />
    <meta property="og:description"
          content="Gagne rapidement, et gratuitement des viewers Twitch et des tonnes de cadeaux !" />
    <meta property="og:url" content="{{ HOSTNAME }}" />
    <meta name="description"
          content="Gagne rapidement, et gratuitement des viewers Twitch et des tonnes de cadeaux !" />
    <meta property="og:site_name" content="StreamRunners" />
    <title>{{ title | default("Titre") }}</title>
    <link rel="icon" href="/img/favicon.ico" />
    <link rel="stylesheet" href="/css/style.css">

    {% block css %}

    {% endblock %}

    <script>
        window.addEventListener('load', function() {
            window.cookieconsent.initialise({
                'palette': {
                    'popup': {
                        'background': '#8c6dc5',
                        'text': '#ffffff',
                    },
                    'button': {
                        'background': '#ffffff',
                        'text': '#8c6dc5',
                    },
                },
                'theme': 'classic',
                'position': 'bottom-right',
                'content': {
                    'message': 'Ce site utilise des cookies pour améliorer votre expérience de navigation.',
                    'dismiss': 'OK !',
                    'link': 'En savoir plus',
                },
            });
        });
    </script>

    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <script>
        (adsbygoogle = window.adsbygoogle || []).push({
            google_ad_client: 'ca-pub-7690571679670706',
            enable_page_level_ads: true,
        });
    </script>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-114414235-2"></script>
    <script>
        window.dataLayer = window.dataLayer || [];

        function gtag() {
            dataLayer.push(arguments);
        }

        gtag('js', new Date());

        gtag('config', 'UA-114414235-2');
    </script>

</head>

<body>
<div class="content">
    {# Navbar #}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">
            <img src="/img/navbrand.png" width="200" alt="SreamRunners">
        </a>
        <button class="navbar-toggler"
                type="button"
                data-toggle="collapse"
                data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">

                <li class="nav-item">
                    <a class="nav-link" href="/"><i class="fas fa-home"></i> Accueil</a>
                </li>

                {% if req.isAuthenticated() %}
                    <li class="nav-item">
                        <a class="nav-link" href="/coupon"><i class="fas fa-ticket-alt"></i> Coupon</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/inventory"><i class="fas fa-suitcase"></i> Inventaire</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/raffle"><i class="fas fa-boxes"></i> GiveAway</a>
                    </li>
                    {% if req.user.moderator %}
                        <li class="nav-item">
                            <a class="red nav-link" href="/admin"><i class="fas fa-lock"></i> Admin</a>
                        </li>
                    {% endif %}

                {% endif %}

            </ul>

            <ul class="navbar-nav ml-auto">

                {% if req.isAuthenticated() %}
                    <li class="nav-item">
                        <img src="{{ req.user.avatar }}" alt="avatar" class="loggedImage">
                        <a class="nav-link d-inline-block" href="#">
                            <div class="loggedPseudo">{{ req.user.displayName }}</div>
                            <div>
                                <span id="points-counter" class="text-small text-white">{{ req.user.points }}</span>
                                <img src="/img/po.png" alt="points" width="16px" height="16px" />
                            </div>

                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/auth/logout"><i class="fas fa-sign-out-alt"></i> Se déconnecter</a>
                    </li>
                {% else %}

                    <a class="btn btn-primary" href="/auth/twitch">Se connecter avec Twitch.Tv
                        <i class="fab fa-twitch"></i></a>
                {% endif %}

            </ul>
        </div>
    </nav>
    {# Announcement #}
    {% if req.isAuthenticated() %}
        {% if announcement != undefined %}
            <div class="container">
                <a href="{{ announcement.url }}" target="_blank">
                    <div class="alert alert-primary"
                         role="alert" {# style="background-color: {{ announcement.color }}" #}>
                        {{ announcement.text }}
                    </div>
                </a>
            </div>
        {% endif %}
    {% endif %}

    {% block content %}
        This is the default content
    {% endblock %}
</div>

<footer class="footer">
    <div class="container">
        <hr>
        <h3 class="text-center">Ils nous font confiance :</h3><br>
        {% for partner in partners %}
            <a href="{{ partner.url }}" target="_blank"><img width="10%" src="{{ partner.image }}" /></a>
        {% endfor %}
        <hr>
    </div>
    <p>© 2019 StreamRunners
        <br>
        <a href="https://www.facebook.com/StreamRunners/" aria-label="Facebook StreamRunners"><i style="color:blue"
                                                                                                 class="fab fa-facebook"></i></a>
        <a href="https://twitter.com/StreamRunners" aria-label="Twitter StreamRunners"><i style="color:deepskyblue"
                                                                                          class="fab fa-twitter-square"></i></a>
        <a href="https://www.instagram.com/twitchrunners/" aria-label="Instagram StreamRunners"><i style="color:pink"
                                                                                                   class="fab fa-instagram"></i></a>
        <a href="https://discord.gg/PjQFW8z" aria-label="Discord StreamRunners"><i style="color:lightgrey"
                                                                                   class="fab fa-discord"></i></a>
    </p>
</footer>

</body>

<script src="/js/bundle.js"></script>
{% if req.isAuthenticated() %}
    <script src="/js/points-counter.js"></script>
{% endif %}

{% block script %}

{% endblock %}


</html>
