{% set title = "StreamRunners - Inventaire" %}
{% extends "master.nunj" %}

{% block css %}
    <link rel="preload" href="/img/case/Beta/close.png" as="image">
{% endblock %}

{% block content %}
<div class="container">

    <h1 class="text-center">Inventaire</h1>
    <hr>
    {# Cases #}
    <section class="row">

        {% for case in req.user.cases %}
            <div class="col-sm-3">
                <div class="card" style="width: 14rem;">
                    {# Image #}
                    {% if case.isOpened() %}
                        <img src="{{ case.type.openImage }}" class="card-img-top" alt="Caisse ouverte">
                    {% else %}
                        <img src="{{ case.type.closeImage }}" class="card-img-top" alt="Caisse fermÃ©">
                    {% endif %}
                    <div class="card-body">
                        {# Name #}
                        <h5 class="card-title">{{ case.type.name }}</h5>
                        {# Content #}
                        {% if case.isOpened() %}
                            <p class="card-text"><b>{{ case.content.name }}</b>
                                <img style="height: 2em; width: auto;"
                                     src="{{ case.content.image }}"
                                     alt="{{ case.content.name }}">
                            </p>
                        {% else %}

                            <div class="col-2">
                                <form action="/case/show" method="post">
                                    <input type="hidden" name="caseId" value="{{ case.id }}">
                                    <button class="btn btn-primary">Ouvrir</button>
                                </form>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}

    </section>


    {# Raffle #}
    <section class="row">
        {% for raffle in req.user.rafflesWon %}
            <div class="col-sm-3">
                <div class="card" style="width: 14rem;">
                    <img src="{{ raffle.icon }}" class="card-img-top" alt="icon">
                    <div class="card-body">
                        <h5 class="card-title">{{ raffle.title }}</h5>

                        {% if raffle.code %}
                            <button type="button"
                                    class="btn btn-primary"
                                    data-toggle="modal"
                                    data-target="#modal-{{ raffle.id }}">
                                Voir le code
                            </button>
                        {% endif %}


                    </div>
                </div>
            </div>

            {# Modal #}
            {% if raffle.code %}
                <div id="modal-{{ raffle.id }}" class="modal" tabindex="-1" role="dialog">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Code</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p>{{ raffle.code }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}

        {% endfor %}
    </section>

    <hr>
    {% endblock %}
</div>
